<% include ../partials/header.ejs %>

<div class="viewport-container">

    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
                <div class="card mt-3">
                    <div class="card-block">
                        <h3 class="card-title text-center">Signup</h3>

                        <% if (message.length > 0) { %>
                            <div class="alert alert-danger"><%= message %></div>
                        <% } %>

                        <form action="/signup" method="post">
                            <div class="form-group">
                                <label for="email">Username</label>
                                <input 
                                    type="text" 
                                    class="form-control" 
                                    name="username"
                                    placeholder="username" 
                                >
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input 
                                    type="password" 
                                    class="form-control" 
                                    name="password"
                                    placeholder="password" 
                                >
                            </div>
                            <div class="row">
                                <div class="col-12 col-md-4 offset-md-4">
                                    <button type="submit" class="btn btn-block btn-success mt-4">Signup</button>
                                </div>
                            </div> 
                        </form>         

                        <p class="card-text text-center mt-4">Already have an account? <a href="/login" class="btn btn-sm btn-primary">Login</a></p>
                    </div>
                </div>    
            </div>    
        </div>
    </div>
</div>    

<% include ../partials/footer.ejs %>